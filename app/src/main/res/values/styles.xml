<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edit_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:background">@null</item>
        <item name="android:digits">@string/russian_alphabet</item>
        <item name="android:fontFamily">@font/sf_semibold</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:textColorHint">@color/grey_6</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="fast_dial_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/sf_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="popular_routes_cardview">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>
</resources>